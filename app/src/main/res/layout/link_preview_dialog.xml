<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:padding="@dimen/padding_default"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Adicionar novo item"
            android:textStyle="bold"
            android:textAlignment="center"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/itemName"
            android:hint="Nome do Item"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:backgroundTint="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputLayout
            app:endIconMode="clear_text"
            app:endIconDrawable="@drawable/ic_baseline_close_24"
            app:boxBackgroundMode="none"
            android:layout_marginVertical="@dimen/padding_default"
            android:inputType="textUri"
            android:paddingTop="@dimen/padding_small"
            android:hint="insira um link vÃ¡lido"
            app:hintTextColor="@color/material_blue400"
            app:expandedHintEnabled="false"
            android:background="@drawable/round"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:padding="@dimen/padding_small"
                android:id="@+id/linkEditText"
                android:background="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <include
            android:id="@+id/preview"
            layout="@layout/link_items_layout" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/save_item_button"
            app:cornerRadius="@dimen/radius_default"
            android:text="Salvar item"
            app:elevation="0dp"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            app:backgroundTint="?attr/colorPrimaryVariant"
            android:padding="@dimen/padding_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</layout>