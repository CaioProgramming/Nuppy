<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:background="?android:colorBackground"
            app:elevation="0dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                app:scrimAnimationDuration="1500"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:expandedTitleGravity="center|bottom"
                android:layout_height="wrap_content">

                <LinearLayout
                    app:layout_collapseMode="parallax"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_gravity="center"
                        app:lottie_rawRes="@raw/heart_beat"
                        app:lottie_autoPlay="true"
                        app:lottie_colorFilter="@color/material_redA700"
                        app:lottie_loop="true"
                        app:lottie_repeatMode="reverse"
                        android:layout_width="200dp"
                        android:layout_height="200dp" />

                    <TextView
                        android:textAppearance="@style/Ilustris.Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/satisfy"
                        android:text="Caio e Debora" />

                    <TextView
                        android:layout_marginBottom="?attr/actionBarSize"
                        style="@style/TextAppearance.MaterialComponents.Body1"
                        android:text="17 de Outubro e 2021"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>


                <androidx.appcompat.widget.Toolbar
                    app:title="Caio e Debora"
                    android:elevation="0dp"
                    android:id="@+id/toolbar"
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    app:layout_collapseMode="pin"
                    android:layout_height="?attr/actionBarSize" />


            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:padding="@dimen/padding_default"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/nuppyRecycler"
                    android:layout_width="match_parent"
                    tools:itemCount="2"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:id="@+id/addItemToListCard"
                    android:padding="@dimen/padding_default"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.airbnb.lottie.LottieAnimationView
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_repeatMode="reverse"
                        app:lottie_rawRes="@raw/think_animation"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"/>
                    <TextView
                        android:layout_gravity="center"
                        android:textColor="@color/material_redA700"
                        style="@style/TextAppearance.MaterialComponents.Headline6"
                        android:text="Criar nova lista"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                </LinearLayout>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>



    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>