<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:paddingVertical="@dimen/padding_default"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Roupas" />

        <androidx.recyclerview.widget.RecyclerView
            android:paddingVertical="@dimen/padding_default"
            tools:listitem="@layout/link_items_layout"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            android:orientation="horizontal"
            android:id="@+id/recyclerChild"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/addItemToListCard"
            android:stateListAnimator="@animator/list_animator"
            app:cardBackgroundColor="@color/material_grey400"
            android:layout_width="match_parent"
            app:cardCornerRadius="@dimen/radius_default"
            android:layout_height="100dp">
            <LinearLayout
                android:padding="@dimen/padding_default"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="@color/md_white"
                    android:gravity="center"
                    style="@style/TextAppearance.MaterialComponents.Headline6"
                    android:text="Adicionar novo item"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <com.airbnb.lottie.LottieAnimationView
                    app:lottie_rawRes="@raw/good_idea"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>



    </LinearLayout>
</layout>