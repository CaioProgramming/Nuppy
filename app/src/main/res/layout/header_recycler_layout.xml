<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:background="@drawable/bottom_line"
        android:backgroundTint="?android:textColorHint"
        android:paddingBottom="@dimen/padding_default"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingHorizontal="@dimen/padding_default"
            style="@style/TextAppearance.MaterialComponents.Caption"
            tools:text="3 itens"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:id="@+id/titleView"
            android:stateListAnimator="@animator/list_animator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="10dp"
                android:paddingHorizontal="@dimen/padding_default"
                android:layout_toStartOf="@id/addItemToListCard"
                android:paddingVertical="@dimen/padding_small"
                android:textStyle="bold"
                tools:text="Roupas" />

            <ImageButton
                android:foreground="?selectableItemBackground"
                android:layout_centerInParent="true"
                android:id="@+id/addItemToListCard"
                android:stateListAnimator="@animator/list_animator"
                android:src="@drawable/ic_round_add_24"
                android:background="@color/transparent"
                android:layout_width="32dp"
                android:layout_marginHorizontal="@dimen/margin_default"
                android:layout_alignParentEnd="true"
                android:tint="?android:textColorPrimary"
                android:layout_height="32dp"/>
        </RelativeLayout>



        <androidx.recyclerview.widget.RecyclerView
            tools:listitem="@layout/grid_item_layout"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            android:orientation="vertical"
            tools:itemCount="4"
            android:id="@+id/recyclerChild"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>
</layout>