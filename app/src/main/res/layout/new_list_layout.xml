<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="@dimen/padding_default"
            android:text="Criar nova lista"
            android:background="@drawable/bottom_line"
            android:backgroundTint="?android:textColorHint"
            android:textStyle="bold"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/itemName"
            android:hint="Nome da lista"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
            android:backgroundTint="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:textAlignment="center"
            android:text="Tipo de lista"
            android:padding="@dimen/padding_small"
            android:background="@color/oblack"
            style="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:background="@color/oblack"
            android:padding="@dimen/padding_default"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/textListCard"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/material_grey500"
                app:cardCornerRadius="@dimen/radius_default"
                android:layout_width="150dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="@dimen/padding_default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_marginVertical="@dimen/margin_default"
                        android:background="@drawable/round"
                        android:backgroundTint="@color/md_white"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>
                    <View
                        android:layout_marginVertical="@dimen/margin_default"

                        android:background="@drawable/round"
                        android:backgroundTint="@color/md_white"
                        android:layout_width="80dp"
                        android:layout_height="10dp"/>
                    <View
                        android:layout_marginVertical="@dimen/margin_default"
                        android:background="@drawable/round"
                        android:backgroundTint="@color/md_white"
                        android:layout_width="40dp"
                        android:layout_height="10dp"/>
                    <View
                        android:layout_marginVertical="@dimen/margin_default"
                        android:background="@drawable/round"
                        android:backgroundTint="@color/md_white"
                        android:layout_width="40dp"
                        android:layout_height="10dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/gridListCard"
                app:cardElevation="8dp"
                android:layout_marginHorizontal="@dimen/margin_default"
                app:cardBackgroundColor="@color/material_red400"
                app:cardCornerRadius="@dimen/radius_default"
                android:layout_width="150dp"
                android:layout_height="wrap_content">
                <GridLayout
                    android:padding="@dimen/padding_small"
                    android:columnCount="2"
                    android:rowCount="4"
                    android:layout_margin="@dimen/margin_default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_margin="@dimen/margin_small"
                        android:background="@drawable/round"
                        android:layout_height="50dp"
                        android:layout_width="50dp"/>
                    <View
                        android:layout_margin="@dimen/margin_small"
                        android:background="@drawable/round"
                        android:layout_height="50dp"
                        android:layout_width="50dp"/>
                    <View
                        android:layout_margin="@dimen/margin_small"
                        android:background="@drawable/round"
                        android:layout_height="50dp"
                        android:layout_width="50dp"/>
                    <View
                        android:layout_margin="@dimen/margin_small"
                        android:background="@drawable/round"
                        android:layout_height="50dp"
                        android:layout_width="50dp"/>
                </GridLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/save_item_button"
            app:cornerRadius="@dimen/radius_default"
            android:layout_margin="@dimen/margin_default"
            android:text="Salvar item"
            app:elevation="0dp"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            app:backgroundTint="?attr/colorPrimaryVariant"
            android:padding="@dimen/padding_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</layout>