<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Nuppy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/material_red800</item>
        <item name="colorPrimaryVariant">@color/material_red900</item>
        <item name="colorOnPrimary">@color/md_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/material_redA400</item>
        <item name="colorSecondaryVariant">@color/material_redA700</item>
        <item name="colorOnSecondary">@color/md_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/Theme.Nuppy.Toolbar</item>
        <item name="actionBarStyle">@style/Theme.Nuppy.Toolbar</item>
        <item name="android:colorBackground">@color/material_black</item>
        <item name="listBackColor">@color/material_grey900</item>
        <item name="strokeColor">@color/material_grey700</item>

    </style>
</resources>